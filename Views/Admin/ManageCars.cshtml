@model IEnumerable<AracKiralamaPortal.Models.Car>

@{
    ViewData["Title"] = "Araç Yönetimi";
}

<div class="container my-5">
    <h1 class="text-center">Araç Yönetimi</h1>
    <a asp-controller="Admin" asp-action="AddCar" class="btn btn-success my-3">Yeni Araç Ekle</a>
    <table class="table table-striped table-bordered table-responsive-md">
        <thead class="thead-dark">
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>Fiyat (Günlük)</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.PricePerDay ₺</td>
                    <td>@(car.IsAvailable ? "Uygun" : "Kiralanmış")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
